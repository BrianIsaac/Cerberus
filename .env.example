CONFIDENCE_THRESHOLD=0.7

# Application
LOG_LEVEL=INFO
PORT=8080

# External APIs (RAGAS Evaluations require OpenAI for LLM-as-judge)
OPENAI_API_KEY=your-openai-api-key
